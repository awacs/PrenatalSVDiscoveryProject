
rule annotate:
    input:
        vcf=os.path.join(config['input_vcfs'], 'SSC.{chrom}.vcf.gz'),
        gencode='gencode/gencode.canonical_annotation.gtf.gz',
        noncoding='noncoding/noncoding_elements.bed'
    output:
        vcf='annotated_vcfs/SSC.{chrom}.vcf'
    shell:
        """
        svtools annotate \
          --gencode {input.gencode} \
          --noncoding {input.noncoding} \
          {input.vcf} \
          {output.vcf}
        """
