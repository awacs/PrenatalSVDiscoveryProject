
rule RdTest:
    input:
        bed='integration/{source}/rdtest_beds/merged.{chrom}.bed',
    output:
        pk='rdtest/{source}/merged.{chrom}.bed.pk',
        zrank='rdtest/{source}/merged.{chrom}.bed_HomPowerPZRank.txt',
    shell:
        """
        cp {input.bed} {output.pk};
        cp {input.bed} {output.zrank};
        """
        # """
        # Rscript {config[gt_script]} -b {input.bed} -c {config[bincov]} \
        #   -o merged.{wildcards.chrom}.bed -v TRUE -g NULL \
        #   -j rdtest/{wildcards.source}/ > /dev/null;
        # """

rule rdtest_filter:
    input:
        zrank='rdtest/{source}/merged.{chrom}.bed_HomPowerPZRank.txt',
    output:
        'rdtest/{source}/merged.rdtest_pass.{chrom}.list'
    shell:
        """
        sed '1d' {input} | cut -f4 > {output}
        """
    

