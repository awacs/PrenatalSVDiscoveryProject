rule make_pesr_rdtest_beds:
    input:
        'integration/pesr/vcfcluster/{source}/cohort.{chrom}.vcf'
    output:
        'integration/pesr/rdtest_beds/{source}/cohort.{chrom}.bed'
    shell:
        "./scripts/make_pesr_rdtest_bed.py {input} {output}"
